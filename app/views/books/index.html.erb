<div class = "index-body">
  <p class = "flash-message">
    <%= flash[:notice] %>
  </p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>

  <% if @book.errors.any? %>
    <div class = "error-box">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul class = "error-message">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class = "field">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <p>Body<p>
      <%= f.text_area :body %>
    </div>

    <div class = "actions">
      <%= f.submit ' Create Book ' %>
    </div>
  <% end %>

</div>